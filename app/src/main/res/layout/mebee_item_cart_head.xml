<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:gravity="center_vertical"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:focusableInTouchMode="false"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <CheckBox
        android:id="@+id/normal_cart_Item_head_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/normal_cart_Item_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/store"
            android:drawableRight="@mipmap/next_black"
            android:singleLine="true"
            android:background="@drawable/mebee_select_item_ripple_bg"
            android:text="商家名称"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/normal_cart_head_delete_img"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@drawable/mebee_select_item_ripple_bg"
        android:src="@mipmap/garbage"/>
</LinearLayout>