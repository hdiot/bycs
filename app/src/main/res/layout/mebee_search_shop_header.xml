<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="1dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@drawable/mebee_select_item_ripple_bg">
    <ImageView
        android:id="@+id/header_shop_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/mebee_bg_square"
        android:layout_marginRight="5dp"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="菜档名称"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/header_shop_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:text="评分：5.0"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lighter_gray"/>
            <TextView
                android:id="@+id/header_shop_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:text="销量1000单"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lighter_gray"/>
            <TextView
                android:id="@+id/header_shop_limit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:text="￥10起送"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lighter_gray"/>
            <TextView
                android:id="@+id/header_shop_send_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:text="￥10配送费"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>