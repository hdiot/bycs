<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="false"
    android:background="@drawable/mebee_select_item_ripple_bg"
    android:layout_marginTop="1dp">

    <CheckBox
        android:id="@+id/normal_basket_content_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/normal_basket_content_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/photo"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/normal_basket_content_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="商品名称"
            android:maxLines="2"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/normal_basket_content_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150克"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="×"/>
                <TextView
                    android:id="@+id/normal_basket_content_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/normal_basket_content_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总计：450 克" />
                <TextView
                    android:id="@+id/normal_basket_content_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="￥66"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>